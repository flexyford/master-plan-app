  <form {{action "signInUser" model on="submit"}}>
    <h2>User Sign In</h2>

    <h4>Email<h4>
    {{input type="text" value=email id="user-email" class="form-control"}}
    <h4>Password<h4>
    {{input type="password" value=password id="user-password" class="form-control"}}

    <button class="btn btn-primary btn-block" type="submit">Sign In</button>
  </form>
  <a class="close-reveal-modal">&#215;</a>
