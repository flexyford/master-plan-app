<!-- about section-->
<div class="row">
  {{#each tile in aboutTiles}}
   
  <div {{bind-attr class=":large-4 :columns :text-center"}} >
     <img {{bind-attr src="tile.img"}} {{bindAttr id="tile.attrId"}} />
      <p {{bind-attr class=":step-text"}}>
      	{{tile.text}}
      </p>
    
  </div>
  {{/each}}
</div>
